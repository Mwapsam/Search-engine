<div id="<%= dom_id article %>">
  <%= link_to article_path(article), class: "text-decoration-none" do%>
    <p>
      <%= article.title %>
    </p>
    <p class='text-dark'><%= truncate(article.body, :length => 170, :separator => ' ') %></p>
    <footer class="blockquote-footer text-end"><cite title="Source Title">Posted <%= time_ago_in_words(article.created_at)%> ago</cite></footer>
    <% end %>
</div>
